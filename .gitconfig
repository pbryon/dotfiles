[user]
	email = bryonpieter@gmail.com
	name = Pieter Bryon
	excludesfile = /home/.gitignore
[core]
	autocrlf = input
	excludesfile = /home/.gitignore
	safecrlf = false
[color]
    ui=always
[log]
    abbrevCommit=true
[status]
    showUntrackedFiles=all
[alias]
    ahead = rev-list --count HEAD ^master
    back = ! git checkout - 2>/dev/null || echo No previous branch!
    behind = rev-list --count master ^HEAD
    delete = branch -d
    dropremote = push origin --delete
    history = log -p --follow
    latest = show HEAD
    new = checkout -b
    rename = branch -m
    resetfile = checkout origin/master
    skip = update-index --skip-worktree
    skipped = ! git ls-files -v . | grep ^S
    squash = merge --squash
    unskip = update-index --no-skip-worktree
    fresh = ! git pull && git checkout -b
    yank = ! git reset --hard && git pull
[push]
	default = simple
[commit]
	verbose = true
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
    helper = store
